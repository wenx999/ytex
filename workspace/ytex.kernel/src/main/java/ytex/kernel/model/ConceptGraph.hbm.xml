<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ytex.kernel.model">
	<class name="ConceptGraph" table="concept_graph">
		<id name="conceptGraphId" column="concept_graph_id">
			<generator class="native">
				<param name="sequence">concept_graph_id</param>
			</generator>
		</id>
  		<property name="depthMax"/>
		<property name="conceptMap" column="conceptMap" type="serializable" />
		<property name="sourceVocabularies" column="sabs">
			<type name="ytex.kernel.dao.StringArrayUserType" />
		</property>
		<set name="roots" table="concept_graph_root">
			<key column="concept_graph_id"/>
			<element column="cui" type="string"/>
		</set>		
	</class>
	<query name="getConceptGraph"><![CDATA[
		from ConceptGraph
		where sourceVocabularies = :sourceVocabularies
	]]></query>	
</hibernate-mapping>