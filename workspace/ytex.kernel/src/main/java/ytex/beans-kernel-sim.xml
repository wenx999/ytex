<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">
	<bean id="conceptSimilarityService" class="ytex.kernel.ConceptSimilarityServiceImpl"
		init-method="init">
		<property name="transactionManager" ref="transactionManager" />
		<property name="conceptDao" ref="conceptDao" />
		<property name="corpusDao" ref="corpusDao" />
		<property name="corpusNames">
			<list>
				<!-- <value>cmc-ctakes</value> 
				<value>cmc-suj</value>
				-->
				<value>i2b2.2008</value>
			</list>
		</property>
	</bean>
	<bean id="abstractConceptKernel" class="ytex.kernel.evaluator.ConceptKernel" abstract="true"
		init-method="init">
		<property name="conceptSimilarityService" ref="conceptSimilarityService" />
		<property name="cacheManager" ref="cacheManager" />
	</bean>
	<bean id="lchKernel" class="ytex.kernel.evaluator.LCHKernel"
		init-method="init">
		<property name="conceptSimilarityService" ref="conceptSimilarityService" />
		<property name="cacheManager" ref="cacheManager" />
	</bean>
	<bean id="abstractLinKernel" class="ytex.kernel.evaluator.LinKernel" abstract="true"
		init-method="init">
		<property name="conceptSimilarityService" ref="conceptSimilarityService" />
		<property name="cacheManager" ref="cacheManager" />
	</bean>
</beans>