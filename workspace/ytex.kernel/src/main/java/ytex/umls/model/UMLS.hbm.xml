<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ytex.umls.model" schema="umls">
	<!--  mrrel doesn't really have a primary key / unique index -->
	<class name="MRREL" table="MRREL">
		<composite-id>
			<key-property name="cui1"></key-property>
			<key-property name="cui2"></key-property>
			<key-property name="rel"></key-property>
			<key-property name="sab"></key-property>
		</composite-id>
		<property name="rela" />
	</class>
	<class name="MRCONSO" table="MRCONSO">
		<id name="aui" column="aui" />
		<property name="cui" />
		<property name="lat" />
		<property name="ts" />
		<property name="lui" />
		<property name="stt" />
		<property name="sui" />
		<property name="ispref" />
		<property name="saui" />
		<property name="scui" />
		<property name="sdui" />
		<property name="sab" />
		<property name="tty" />
		<property name="code" />
		<property name="str" />
		<property name="srl" />
		<property name="suppress" />
		<property name="cvf" />
	</class>

	<class name="MRSTY" table="MRSTY">
		<composite-id>
			<key-property name="cui"></key-property>
			<key-property name="tui"></key-property>
		</composite-id>
		<property name="stn" />
		<property name="sty" />
		<property name="atui" />
		<property name="cvf" />
	</class>
	<query name="getRelationsForSABs"><![CDATA[
		select cui1, cui2
		from MRREL
		where sab in (:sabs)
		and rel in ('PAR') and rela in ('inverse_isa')
	]]></query>
	<query name="getAllRelationsOld"><![CDATA[
		select cui1, cui2
		from MRREL
		where rel in ('PAR') and rela in ('inverse_isa')
	]]></query>
	<query name="getFirstAuiStr"><![CDATA[
		select aui,str
		from MRCONSO
		order by aui
	]]></query>
	<query name="getNextAuiStr"><![CDATA[
		select aui,str
		from MRCONSO
		where aui > :aui
		order by aui
	]]></query>
	<query name="getAllRelations"><![CDATA[
		select cui1, cui2
		from MRREL
		where 
		(rel in ('RB') and rela is null)
		or
		(rel in ('PAR') and rela in ('inverse_isa'))
	]]></query>
</hibernate-mapping>