<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <name>DocumentInfoTypeSystem</name>
  <description>core information contained in the 'heading' of each document: Title and Date.  Could add name and ssn (as these are in each document), but don't need them for our purposes.</description>
  <version>1.0</version>
  <vendor/>
  <types>
    <typeDescription>
      <name>ytex.vacs.uima.types.DocumentDate</name>
      <description>Document date</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>date</name>
          <description>Java Date.getTime</description>
          <rangeTypeName>uima.cas.Long</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>ytex.vacs.uima.types.DocumentTitle</name>
      <description>covered text is the title</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
    </typeDescription>
  </types>
</typeSystemDescription>
