<project name="build">
	<property name="java.tools.home" value="c:/java" />
	<!--
	<property name="maveric.home" value="${java.tools.home}/MavericArcApp-1.0.0" />
	-->
	<property name="maveric.home" value="../maveric" />
	<property name="dist.home" value="../dist" />
	<property name="ytex.dist.home" value="../dist/ytex" />
	<property name="ytex.lib.home" value="../ytex.web/WebContent/WEB-INF/lib" />

	<property name="nlp.home" value="c:/java" />
	<property name="tomcat.dir" value="apache-tomcat-6.0.26" />
	<property name="ant.dir" value="apache-ant-1.8.0" />
	<property name="sqljdbc.dir" value="sqljdbc_3.0" />
	<property name="mysql-connector.dir" value="mysql-connector-java-5.1.9" />


	<path id="cp.maveric">
		<fileset dir="${maveric.home}/ext">
			<include name="mavericPipeline-1.0.0.jar" />
		</fileset>
		<fileset dir="${maveric.home}/lib">
			<include name="log4j-1.2.14.jar" />
			<include name="lvg2010dist.jar" />
			<include name="opennlp-tools-1.4.0.jar" />
			<include name="jdom.jar" />
			<include name="maxent-2.5.0.jar" />
			<include name="OpenAI_FSM.jar" />
			<include name="trove.jar" />
			<include name="lucene-1.4-final.jar" />
			<include name="uima-cpe.jar" />
			<include name="uima-core.jar" />
			<include name="uima-tools.jar" />
			<include name="uima-document-annotation.jar" />
		</fileset>
		<dirset dir="${maveric.home}" includes="dest" />
		<dirset dir="${maveric.home}" includes="resources" />
	</path>
	<path id="cp.ytex">
		<fileset dir="${ytex.lib.home}" includes="*.jar" />
	</path>
	<path id="cp.all">
		<path refid="cp.ytex" />
		<path refid="cp.maveric" />
	</path>

	<target name="zipSources">
		<tstamp>
			<format property="today" pattern="yyyy-MM-dd" />
		</tstamp>
		<delete file="../${today}-ytex-src-all.zip" quiet="yes" />
		<zip destfile="../${today}-ytex-src-all.zip">
			<fileset dir="../">
				<include name="libs.ytex/**/*.*" />
				<include name="libs.system/**/*.*" />
				<include name="build/**/*.*" />
				<exclude name="**/bin/**/*.*" />
				<exclude name="libs.system/sqljdbc*/**/*.*" />
			</fileset>
			<fileset dir="../">
				<include name="maveric/**/*.*" />
				<exclude name="**/resources/**/*.*" />
				<exclude name="**/bin/**/*.*" />
			</fileset>
			<fileset dir="../">
				<include name="data.mssql/**/*.*" />
				<exclude name="**/*.bcp" />
				<exclude name="**/bin/**/*.*" />
			</fileset>
			<fileset dir="../">
				<include name="ctakes-patches/**/*.*" />
				<include name="ytex.uima/**/*.*" />
				<include name="ytex.model/**/*.*" />
				<include name="ytex.negex/**/*.*" />
				<include name="ytex.web/**/*.*" />
				<exclude name="**/bin/**/*.*" />
				<exclude name="**/*.class" />
				<exclude name="**/*.jar" />
			</fileset>
			<fileset dir="../">
				<include name="config/**/*.*" />
				<exclude name="**/ytex.properties" />
				<exclude name="**/ytex/search.properties" />
			</fileset>
		</zip>
	</target>

	<target name="clean.dist">
		<delete dir="${dist.home}" quiet="yes" />
		<mkdir dir="${ytex.dist.home}/lib" />
		<mkdir dir="${ytex.dist.home}/config/desc" />
		<mkdir dir="${ytex.dist.home}/web" />
	</target>
	<target name="build.ytex.uima">
		<path id="cp.ytex.uima">
			<path refid="cp.all" />
			<fileset dir="${ytex.dist.home}/lib" includes="ytex.model.jar" />
		</path>
		<antcall target="compile" inheritRefs="true">
			<param name="project.name" value="ytex.uima" />
			<param name="project.classpathref" value="cp.ytex.uima" />
		</antcall>
	</target>
	<target name="build.ytex.negex">
		<antcall target="compile">
			<param name="project.name" value="ytex.negex" />
		</antcall>
	</target>
	<target name="build.ytex.model">
		<antcall target="compile">
			<param name="project.name" value="ytex.model" />
		</antcall>
	</target>
	<target name="build.ctakes-patches">
		<!-- todo: clean up generated properties files/templates -->
		<antcall target="compile">
			<param name="project.name" value="ctakes-patches" />
		</antcall>
	</target>
	<target name="copy.config">
		<copy todir="${ytex.dist.home}/config">
			<fileset dir="../config">
				<include name="desc/**/*.*" />
				<exclude name="desc/ytex.properties" />
				<exclude name="**/.svn/**/*.* " />
			</fileset>
		</copy>
	</target>
	<!--
	<target name="copy.lib">
		<copy todir="${ytex.dist.home}/lib">
			<fileset dir="${ytex.lib.home}">
				<include name="*.jar" />
				<exclude name="spring-security*.jar" />
				<exclude name="jsf*.jar" />
				<exclude name="icefaces*.jar" />
				<exclude name="backport-util-concurrent.jar" />
				<exclude name="FastInfoset.jar" />
				<exclude name="krysalis*.jar" />
				<exclude name="jxl.jar" />
				<exclude name="*commons*fileupload*.jar" />
			</fileset>
		</copy>
	</target>
	-->
	<target name="copy.data">
		<copy todir="${ytex.dist.home}">
			<fileset dir="../">
				<include name="data/**/*.*" />
				<exclude name="**/.classpath" />
				<exclude name="**/.project" />
				<exclude name="**/.svn/**/*.*" />
				<exclude name="**/umls/*.bcp" />
				<exclude name="**/umls/*.txt" />
			</fileset>
			<fileset dir="../">
				<include name="data/**/umls/*_sample.*" />
			</fileset>
		</copy>
	</target>
	<target name="copy.scripts">
		<copy todir="${ytex.dist.home}">
			<fileset dir=".">
				<include name="*.cmd" />
				<include name="build-setup.xml" />
			</fileset>
		</copy>
	</target>
	<target name="copy.examples">
		<copy todir="${ytex.dist.home}">
			<fileset dir="../">
				<include name="examples/**/*.*" />
				<exclude name="**/.classpath" />
				<exclude name="**/.project" />
				<exclude name="**/.svn/**/*.*" />
			</fileset>
		</copy>
	</target>
	<target name="copy.maveric">
		<copy todir="${ytex.dist.home}" includeEmptyDirs="false">
			<fileset dir="../">
				<include name="maveric/**/*.*" />
				<exclude name="**/data/**/*.*" />
				<exclude name="**/src/**/*.*" />
				<exclude name="**/.settings/**/*.*" />
				<exclude name="**/.classpath" />
				<exclude name="**/.project" />
				<exclude name="**/.svn/**/*.*" />
			</fileset>
			<fileset dir="../">
				<include name="maveric/resources/lvg/data/config/*.*" />
			</fileset>
		</copy>
	</target>
	<target name="compile">
		<property name="project.home" value="../${project.name}" />
		<property name="project.bin.home" value="${project.home}/bin" />
		<property name="project.src.home" value="${project.home}/src/main/java" />
		<property name="project.jar.name" value="${project.home}.jar" />
		<property name="project.classpathref" value="cp.all" />
		<delete dir="${project.bin.home}" quiet="yes" />
		<mkdir dir="${project.bin.home}" />
		<javac srcdir="${project.src.home}" destdir="${project.bin.home}" classpathref="${project.classpathref}" />
		<copy todir="${project.bin.home}">
			<fileset dir="${project.src.home}">
				<exclude name="**/*.java" />
				<exclude name="**/.svn/**/*.*" />
			</fileset>
		</copy>
		<jar destfile="${ytex.dist.home}/lib/${project.name}.jar" basedir="${project.bin.home}" excludes="**/.svn/**/*.*" />
	</target>
	<target name="build.ytex.web">
		<property name="ytex.web.dir" value="${ytex.dist.home}/web/webapps/ytex.web" />
		<property name="ytex.web.classes.dir" value="${ytex.dist.home}/web/webapps/ytex.web/WEB-INF/classes" />

		<delete dir="${ytex.dist.home}/web" quiet="yes" />
		<copy todir="${ytex.dist.home}/web">
			<fileset dir="../ytex.web/catalina">
				<exclude name="**/.svn/**/*.*" />
			</fileset>
		</copy>
		<mkdir dir="${ytex.web.classes.dir}" />
		<javac srcdir="../ytex.web/src/main/java" destdir="${ytex.web.classes.dir}">
			<classpath>
				<fileset dir="${ytex.dist.home}/lib">
					<include name="ytex.model.jar" />
				</fileset>
				<path refid="cp.ytex" />
			</classpath>
		</javac>
		<copy todir="${ytex.web.classes.dir}">
			<fileset dir="../ytex.web/src/main/java">
				<exclude name="**/*.java" />
				<exclude name="**/.svn/**/*.*" />
			</fileset>
		</copy>
		<copy todir="${ytex.web.dir}">
			<fileset dir="../ytex.web/WebContent">
				<exclude name="**/.svn/**/*.*" />
			</fileset>
		</copy>
		<copy todir="${ytex.web.dir}/WEB-INF/lib">
			<fileset dir="${ytex.dist.home}/lib">
				<include name="ytex.model.jar" />
			</fileset>
		</copy>
	</target>
	<target name="zip.dist">
		<zip destfile="${dist.home}/ytex.zip" basedir="${dist.home}" includes="ytex/**/*.*" />
		<zip destfile="${dist.home}/ytex-with-dependencies.zip">
			<fileset dir="${dist.home}" includes="ytex/**/*.*" />
			<zipfileset dir="${nlp.home}" includes="${tomcat.dir}/**/*.*" 
				excludes="${tomcat.dir}/webapps/**/*.*" />
			<zipfileset dir="${nlp.home}" includes="${ant.dir}/**/*.*" 
				excludes="${ant.dir}/docs/**/*.*" />
			<zipfileset dir="${nlp.home}" includes="${sqljdbc.dir}/**/*.*" 
				excludes="${sqljdbc.dir}/enu/help/**/*.*,${sqljdbc.dir}/enu/xa/**/*.*" />
			<zipfileset dir="${nlp.home}" includes="${mysql-connector.dir}/*.*" />
		</zip>
	</target>
	<target name="build.all" depends="clean.dist,build.ctakes-patches,build.ytex.model,build.ytex.negex,build.ytex.uima,copy.config,copy.scripts,copy.data,copy.examples,build.ytex.web,copy.maveric,zip.dist" />
</project>