<?xml version="1.0" encoding="UTF-8"?>
<collectionReaderDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>ytex.vacs.uima.DBCollectionReader</implementationName>
  <processingResourceMetaData>
    <name>DBcollectionReader</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>queryGetDocumentKeys</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>queryGetDocument</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>keyTypeName</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>queryGetDocumentKeys</name>
        <value>
          <string>select site_id, uid, document_type_id from esld.dummy_document</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>queryGetDocument</name>
        <value>
          <string>select doc_text from esld.dummy_document where site_id = :site_id and uid = :uid and document_type_id = :document_type_id</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>keyTypeName</name>
        <value>
          <string>ytex.vacs.uima.types.DocumentKey</string>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription>
      <imports>
        <import name="ytex.vacs.uima.types.DocumentKeyTypeSystem"/>
      </imports>
    </typeSystemDescription>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>true</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</collectionReaderDescription>
